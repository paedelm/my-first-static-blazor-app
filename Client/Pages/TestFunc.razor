@page "/testfunc"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize()]
@using BlazorApp.Shared
@using BlazorApp.Client.Services
@using EnvironmentNS
@using System.Text.Json
@using System.Text
@inject HttpClientDevl HttpDevl

<h1>TestFunc</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (bericht == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Naam</th>
                <th>Bericht</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@bericht.Naam</td>
                <td>@bericht.Bericht</td>
            </tr>
        </tbody>
    </table>
}

@code {
    private NaamBericht? bericht;
    [Parameter]
    [SupplyParameterFromQuery]
    public string? Naam { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var reqParam = Naam != null ? $"?name={Naam}" : "";
            var apicall = $"/api/TestFunc{ reqParam }";
            bericht = await HttpDevl.GetFromJsonAsync<NaamBericht>(apicall) ?? new NaamBericht(Naam: "Nobody", Bericht: "Api call mislukt");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.ToString());
        }
    }
}
